{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block main %}
    <div class="container_inscription">
        <div class="jumbotron jumbotron-fluid">
            {{ form_start(form) }}
            {{ form_row(form.email, {'attr': {'placeholder': 'Email...'}}) }}
            {{ form_row(form.username, {'label':'Nom d\'utilisateur','attr': {'placeholder': 'Nom ...'}}) }}
            {{ form_row(form.password, {'label':'Mot de passe','attr': {'placeholder' : 'Mot de passe...'}})}}
            {{ form_row(form.confirmpassword, {'label':'Verification Mot de passe'}) }}
            <input type="submit" class="btn btn-success"/>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
