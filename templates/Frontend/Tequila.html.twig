{% extends 'base.html.twig' %}

{% block main %}
    <div class="jumbotron jumbotron-fluid responsive">
        <div class="container">
            <div class="container_spiritueux">
                <h1 class="display-4">La Tequila</h1>
                {% for AffichageTequila in AffichageTequila %}
                    <h2>Histoire</h2>
                    <p>{{ AffichageTequila.histoire }}</p>
                    <h2>Son elaboration</h2>
                    <p>{{ AffichageTequila.elaboration|raw }}</p>
