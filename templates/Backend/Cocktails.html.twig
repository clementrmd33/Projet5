{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block main %}
    <div class="container_ajout responsive">
        <div class="jumbotron jumbotron-fluid">
            {{ form_start(form) }}
            {{ form_row(form.Nom) }}
            {{ form_row(form.Recette)}}
            {{ form_row(form.Decoration) }}
            {{ form_row(form.Histoire) }}
            {{ form_row(form.Elaboration) }}
            {{ form_row(form.Alcool) }}
            <input type="submit" />
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/ckeditor/adapters/jquery.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/ckeditor/ckeditor.js') }}" type="text/javascript"></script>
    <script type="text/javascript">
        $(function() {
            $('textarea.ckeditor').ckeditor();
        });
    </script>
{% endblock %}