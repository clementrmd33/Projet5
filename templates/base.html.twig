<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Alambic{% endblock %}</title>
    {% block stylesheets %}
        <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <link rel="stylesheet" href="{{ asset('css/mediaqueries.css') }}">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">
    {% endblock %}
</head>
<body>
<header>
    <div class="navbar navbar-default">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="navbar-header">
                        <img src="{{ asset('images/Logo.png') }}" alt="logo du titre">
                    </div>
                </div>
            </div>
            <div class="navbar">
                <div class="text-center">
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="{{ path('accueil') }}">Accueil</a></li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Cocktails<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="{{ path('cocktail_alcool') }}">Avec alcool</a></li>
                                <li><a href="{{ path('cocktail_sans_alcool') }}">Sans alcool</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Spiritueux<span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a href="{{ path('vodka') }}">Vodka</a></li>
                                <li><a href="{{ path('gin') }}">Gin</a></li>
                                <li><a href="{{ path('rhum') }}">Rhum</a></li>
                                <li><a href="{{ path('whiskies') }}">Whisky</a></li>
                                <li><a href="{{ path('tequila') }}">Téquila</a></li>
                                <li><a href="{{ path('autres_spirit') }}">Autres</a></li>
                            </ul>
                        </li>
                        <li><a href="{{ path('app_frontend_map_cartejson') }}">Bars</a></li>
                        {% if not app.user %}
                            <li><a href="{{ path('connect')}}">Connexion</a></li>
                        {% else %}
                            <li><a href="{{ path('logout') }}">Deconnexion</a></li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</header>
{% block main %}

{% endblock %}

<footer>
    <ul class="nav justify-content-end">
        <li class="nav-item">
            <a class="nav-link" href="{{ path('contact') }}">Contact</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">Mentions légales</a>
        </li>
        {% if not app.user %}
            <li class="nav-item">
                <a class="nav-link" href="#"></a>
            </li>
        {% else %}
            <li class="nav-item">
                <a class="nav-link" href="{{ path('Admin') }}">Admin</a>
            </li>
        {% endif %}
        {% if not app.user %}
            <li class="nav-item">
                <a class="nav-link" href="#"></a>
            </li>
        {% else %}
            <li class="nav-item">
                <a class="nav-link" href="{{ path('profil') }}">Profil</a>
            </li>
        {% endif %}
    </ul>
</footer>

{% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="https://cloud.tinymce.com/stable/tinymce.min.js?apiKey=vkvq2dzssu5igxxi1uk64pxupp4lkm90ea56z53lb1wyrsb6"></script>
{% endblock %}
</body>
</html>
